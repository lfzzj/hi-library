<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">

   <com.lf.common.ui.view.IconFontTextView
       android:layout_width="match_parent"
       android:background="@drawable/shape_home_search"
       android:textSize="14sp"
       android:textColor="@color/color_d9f"
       android:gravity="center"
       android:layout_marginTop="@dimen/dp_5"
       android:layout_marginBottom="@dimen/dp_10"
       android:layout_marginLeft="@dimen/dp_16"
       android:layout_marginRight="@dimen/dp_16"
       android:text="@string/home_search_hint"
       android:layout_height="@dimen/dp_35"/>

   <com.lf.hi.ui.tab.top.HiTabTopLayout
       android:id="@+id/top_tab_layout"
       android:layout_width="match_parent"
       android:background="@color/white"
       android:layout_height="@dimen/dp_45"/>

   <androidx.viewpager.widget.ViewPager
      android:id="@+id/view_pager"
       android:layout_width="match_parent"
       android:layout_height="match_parent"/>

</LinearLayout>